@model FootballManager.Models.Championship
@using FootballManager

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Championship</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Logo)
        </dt>

        <dd>
            @if (ViewBag.Logo != null) {
                <img src="@ViewBag.Logo" class="img-circle" alt="@Model.Name" />
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FoudationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FoudationDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EntityManager.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EntityManager.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Country.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country.Name)
        </dd>
    </dl>

    <table class="table">
        <tr>
            <td>
                Seasons
            </td>
            <td align="right">
                @Html.ActionLink("Add Season", "Create", "Season/Create")
            </td>
        </tr>
        @foreach (var item in Model.Season)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td align="right">
                    @Html.ActionLink("Details", "Seasons/Details", new { id = item.ID })
                    @*@Html.ActionLink("Delete", "Delete", "Reviews", new { id = item.ID }, null)*@
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

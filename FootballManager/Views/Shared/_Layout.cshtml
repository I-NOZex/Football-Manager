<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic -->
    <meta charset="utf-8">
    <title>@ViewBag.Title - Football Manager by PSW</title>
    <meta name="keywords" content="football,manager,soccer,team,championship,journey,match,season,country,matchGoal" />
    <meta name="description" content="Football Manager">
    <meta name="author" content="Grupo 2">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Theme CSS -->
    <link href="@Styles.Url("~/Content/Theme/css/style.css")" rel="stylesheet" media="screen" />
    <!-- Responsive CSS -->
    <link href="@Styles.Url("~/Content/Theme/css/theme-responsive.css")" rel="stylesheet" media="screen">
    <!-- Skins Theme -->
    <link href="@Styles.Url("~/Content/Theme/css/green.css")" rel="stylesheet" media="screen" class="skin">

    <!-- Favicons -->
    <link rel="shortcut icon" href="@Url.Content("~/favicon.png")">
    <link rel="apple-touch-icon" href="@Url.Content("~/favicon.png")">

    <!-- Plugins Styles -->
    @Styles.Render("~/Content/datepicker.css")
    @Styles.Render("~/Content/select2.css")
    @Styles.Render("~/Content/select2-bootstrap.css")

    <!-- Head Libs -->
    @Scripts.Render("~/bundles/modernizr")

    <!--[if IE]>
        <link rel="stylesheet" href="css/ie/ie.css">
    <![endif]-->
    <!--[if lte IE 8]>
        <script src="js/responsive/html5shiv.js"></script>
        <script src="js/responsive/respond.js"></script>
    <![endif]-->
    <!-- Skins Changer-->
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    

</head>
<body>
    <!-- layout-->
    <div id="layout" class="layout-boxed">
        <!-- Header-->
        <header>
            <!-- headerbox-->
            <div class="headerbox">
                <div class="container">
                    <div class="row">
                        <!-- Logo-->
                        <div class="col-md-3 logo">
                            <a href="@Url.Action("Index", "Home")">
                                <img src="@Url.Content("~/Content/Theme/img/FM_LOGO.png")" />
                            </a>
                        </div>
                        <!-- End Logo-->
                    </div>
                </div>
            </div>
            <!-- End headerbox-->
            <!-- mainmenu-->
            <nav class="mainmenu">
                <div class="container">
                    <!-- Menu-->
                    <ul class="sf-menu" id="menu">
                        <li class="selected">
                        @Html.ActionLink("Home", "Index", "Home")
                        </li>
                        <li class="current">
                            <a href="#">Teams</a>
                            <ul class="sub-current">
                                <li>
                                   @Html.ActionLink("View Teams", "Index", "Teams")
                                </li>
                                <li>
                                   @Html.ActionLink("Create Teams", "Create", "Teams")
                                </li>
                            </ul>

                        </li>
                        <li class="current">
                            <a href="#">Championships</a>
                            <ul class="sub-current">
                                <li>
                                    @Html.ActionLink("View Championships", "Index", "Championships")
                                </li>
                                <li>
                                    @Html.ActionLink("Create Championships", "Create", "Championships")
                                </li>
                            </ul>

                        </li>

                        <li class="current">
                            <a href="#">Journeys</a>
                            <ul class="sub-current">
                                <li>
                                    @Html.ActionLink("View Journeys", "Index", "Journeys")
                                </li>
                            </ul>
                        </li>

                        <li class="current">
                            <a href="#">Matches</a>
                            <ul class="sub-current">
                                <li>
                                    @Html.ActionLink("View Matches", "Index", "Matches")
                                </li>
                            </ul>
                        </li>

                        <li class="current">
                            <a href="#">Match Goals</a>
                            <ul class="sub-current">
                                <li>
                                    @Html.ActionLink("View Match Goals", "Index", "MatchGoals")
                                </li>
                            </ul>
                        </li>
                        <li class="current nav navbar-nav navbar-right">
                            @using Microsoft.AspNet.Identity
                            @if (Request.IsAuthenticated)
                            {
                                <a href="#">Hello @User.Identity.GetUserName()</a>
                                <ul class="sub-current">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>@Html.ActionLink("Countries", "Index", "Countries")</li>
                                        <li>@Html.ActionLink("Entity Managers", "Index", "EntityManagers")</li>
                                    }
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <li>
                                            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <a href="#">User</a>
                                <ul class="sub-current">
                                    <li>
                                        @Html.ActionLink("Login", "Login", "Account")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Register", "Register", "Account")
                                    </li>
                                </ul>
                            }

                        </li>
                       </ul>
                    <!-- End Menu-->
                </div>
            </nav>
            <!-- End mainmenu-->
        </header>
        <!-- End Header-->

                    </div>
                </div>
            </div>*@
        <!-- Section Title -->
        <section class="section-title img-about">
            <div class="overlay-bg"></div>
            <div class="container">
                <h1>@ViewContext.RouteData.Values["controller"] </h1>
            </div>
        </section>
        <!-- End Section Title -->
        <!-- Section Area - Content Central -->
        <section class="content-info">

            <div class="crumbs">
                <div class="container">
                    <ul>
                        <li>@Html.ActionLink(ViewContext.RouteData.Values["controller"].ToString(),"Index")</li>
                        <li>/</li>
                        <li>@ViewContext.RouteData.Values["action"]</li>
                    </ul>
                </div>
            </div>

            <div class="semiboxshadow text-center">
                <img src="@Url.Content("~/Content/Theme/img/img-theme/shp.png")" class="img-responsive" alt="">
            </div>

            <!-- Content Central -->
            <div class="container padding-top">
                <div class="row">
                    <!-- content Column Left -->
                    <div class="col-md-12">

                        <div class="row">
                            <!-- blog post-->
                            @RenderBody()
                        </div>

                        <!-- End Experts -->
                    </div>
                    <!-- End content Left -->



                </div>
            </div>
            <!-- End Content Central -->

        </section>
        <!-- End Section Area - Content Central -->
        <!-- footer-->
        <footer id="footer">
            <div class="container">

            </div>
        </footer>
        <!-- End footer-->
        <!-- footer Down-->
        <div class="footer-down">
            <div class="container">
                <div class="row">
                    <div class="col-md-5">
                        <p>&copy; 2014 Football Manager . All Rights Reserved.  2014</p>
                    </div>
                    <div class="col-md-7">
                        <!-- Nav Footer-->
                        <ul class="nav-footer">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Teams", "Index", "Teams")</li> 
                            <li>@Html.ActionLink("Championships", "Index", "Championships")</li>
                            <li>@Html.ActionLink("Journeys", "Index", "Journeys")</li>
                            <li>@Html.ActionLink("Matches", "Index", "Matches")</li>
                            <li>@Html.ActionLink("Match Goals", "Index", "MatchGoals")</li>
                                         
                        </ul>
                        <!-- End Nav Footer-->
                    </div>
                </div>
            </div>
        </div>
        <!-- footer Down-->

    </div>
    <!-- End layout-->
    <!-- ======================= JQuery libs =========================== -->
    <!-- jQuery local-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Content/Theme/js/jquery.js")
    <!--Nav-->
    @Scripts.Render("~/Content/Theme/js/tinynav.js")
    @Scripts.Render("~/Content/Theme/js/hoverIntent.js")
    @Scripts.Render("~/Content/Theme/js/superfish.js")
    @Scripts.Render("~/Content/Theme/js/jquery.sticky.js")
    <!--Totop-->
    @Scripts.Render("~/Content/Theme/js/jquery.ui.totop.js")
    <!--Slide-->
    @Scripts.Render("~/Content/Theme/js/camera.js")
    @Scripts.Render("~/Content/Theme/js/jquery.easing.1.3.min.js")
    <!-- Maps -->
    @Scripts.Render("~/Content/Theme/js/gmap3.js")
    <!--Ligbox-->
    @Scripts.Render("~/Content/Theme/js/jquery.fancybox.js")
    <!-- carousel.js-->
    @Scripts.Render("~/Content/Theme/js/carousel.js")
    <!-- Filter -->
    @Scripts.Render("~/Content/Theme/js/jquery.isotope.js")
    <!-- Twitter Feed-->
    @Scripts.Render("~/Content/Theme/js/jquery.tweet.js")
    <!-- flickr Feed-->
    @Scripts.Render("~/Content/Theme/js/jflickrfeed.min.js")
    <!-- Counter -->
    @Scripts.Render("~/Content/Theme/js/jquery.countdown.js")
    <!--Theme Options-->
    @Scripts.Render("~/Content/Theme/js/theme-options.js")
    @Scripts.Render("~/Content/Theme/js/jquery.cookies.js")
    <!-- Bootstrap.js-->
    @Scripts.Render("~/Content/Theme/js/bootstrap.js")
    <!--MAIN FUNCTIONS-->
    @Scripts.Render("~/Content/Theme/js/main.js")
    <!-- ======================= End JQuery libs =========================== -->

        @RenderSection("scripts", required: false)
</body>
</html>
